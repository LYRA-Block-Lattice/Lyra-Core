@inject LyraRestClient client

<div>
    @if (block == null)
    {
        <p>Loading...</p>
    }
    else
    {
        <p>Block Details</p>
        <pre>@block.Print()</pre>
    }
</div>

@code {
    private string _hash;
    [Parameter]
    public string Hash
    {
        get
        {
            return _hash;
        }
        set
        {
            _hash = value;

            var t = new Task(async () =>
            {
                var ret = await client.GetBlock(_hash);
                if (ret.ResultCode == APIResultCodes.Success)
                    block = ret.GetBlock();
            });
            t.ContinueWith(a => InvokeAsync(() =>
            {

                StateHasChanged();
            }));
            t.Start();            
        }
    }

    private Block block { get; set; }
}
