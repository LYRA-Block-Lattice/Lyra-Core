@inherits Fluxor.Blazor.Web.Components.FluxorComponent
@page "/fees"
@page "/fees/{addr}"

@if (feeState.Value.IsLoading)
{
    <p><em>Fetching fee stats... This may take a while.</em></p>
}
@if (feeState.Value.Stats != null)
{
    <p>Total fee confirmed: <em>@feeState.Value.Stats.TotalFeeConfirmed</em> LYR, unconfirmed: <em>@feeState.Value.Stats.TotalFeeUnConfirmed</em> LYR</p>

    <br />
<h3>Confirmed Revenues</h3>
    <table class="table">
        <thead>
            <tr>
                <th>Authorizer Account ID</th>
                <th>Fee Earned</th>
            </tr>
        </thead>
        <tbody>
            @foreach(var item in feeState.Value.Stats.ConfirmedEarns)
            {
            <tr>
                <td>@item.AccId</td>
                <td>@item.Revenue</td>
            </tr>
            }

        </tbody>
    </table>

        <br />
<h3>Unconfirmed Revenues</h3>
    <table class="table">
        <thead>
            <tr>
                <th>Authorizer Account ID</th>
                <th>Fee Earned</th>
            </tr>
        </thead>
        <tbody>
            @foreach(var item in feeState.Value.Stats.UnConfirmedEarns)
            {
            <tr>
                <td>@item.AccId</td>
                <td>@item.Revenue</td>
            </tr>
            }

        </tbody>
    </table>

}

