@inherits Fluxor.Blazor.Web.Components.FluxorComponent
@page "/showblock"
@page "/showblock/{hash}"

<h2 style="text-align: center">Search by Hash</h2>
<p style="text-align: center"><input size="100" type="text" @oninput="oninput" /></p>

@if (searchState.Value.IsLoading)
{
    <p><em>Loading...</em></p>
}
@if (searchState.Value.block != null)
{

    <div style="border: 1px, solid">
        <p>Block Details</p>
        <pre>@((MarkupString)searchState.Value.FancyShow())</pre>
    </div>

}

