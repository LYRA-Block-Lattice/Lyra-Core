@inherits Fluxor.Blazor.Web.Components.FluxorComponent
@page "/showblock"
@page "/showblock/{hash}"

<h1>Block Explorer for LYRA Block Lattice </h1>

<h3>Search by Hash</h3>
<p><input size="100" type="text" @oninput="oninput" /></p>

@if (searchState.Value.IsLoading)
{
    <p><em>Loading...</em></p>
}
@if (searchState.Value.block != null)
{

    <div style="border: 1px, solid">
        <p>Block Details</p>
        <pre>@searchState.Value.block.Print()</pre>
    </div>

}

